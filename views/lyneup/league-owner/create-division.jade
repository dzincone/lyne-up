extends ../../layout

block content
  .container
    .main
      main
        .row
          h1 Add a Division
        .row
          .main-content
            if errors
              .errors
                ul
                  each error in errors
                    li= error
          .form
            form(action="/create-division/" + _id, method="post")
              .row
                .label
                  label(for="name") Division Name
                .input
                  input(type="text" name="name" id="name")
              .row
                .label
                  label(for="gender") Gender
                .input
                  select(id="gender" name="gender")
                    option(value="boys") Boys
                    option(value="girls") Girls
              .row
                .label
                  label(for="grade") Grade Level
                .input
                  select(id="grade" name="grade")
                    option(value="3rd") 3rd Grade
                    option(value="4th") 4th Grade
                    option(value="5th") 5th Grade
                    option(value="6th") 6th Grade
                    option(value="7th") 7th Grade
                    option(value="8th") 8th Grade
                    option(value="9th") 9th Grade
                    option(value="10th") 10th Grade
                    option(value="11th") 11th Grade
                    option(value="12th") 12th Grade
              .row
                .label
                  label(for="skill") Skill Level
                .input
                  select(id="skill" name="skill")
                    option(value="elite") Elite
                    option(value="intermediate") Intermediate
                    option(value="beginner") Beginner
              .row
                .label
                  label(for="max") Max Number of Teams
                .input
                  input(type="number" name="max" id="max")
              .row
                .label
                .input
                  input(type="submit" value="Create Division")
                  
            
