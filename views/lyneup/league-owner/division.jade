extends ../../layout

block content
  .container
    .main
      main
        .row
          h1 Manage Your Division
        .row
          .main-content
            .form
              form(action="/update-division/" + data._id, method="post")
                .row
                  .label
                    label(for="name") Division Name
                  .input
                    input(type="text" name="name" id="name" value=data.division_name)
                .row
                  .label
                    label(for="gender") Gender
                  .input
                    select(id="gender" name="gender" selected=value===data.gender)
                      option(value="boys") Boys
                      option(value="girls") Girls
                .row
                  .label
                    label(for="grade") Grade Level
                  .input
                    select(id="grade" name="grade")
                      option(value="3rd", selected=data.grade_level == "3rd") 3rd Grade
                      option(value="4th" selected=data.grade_level == "4th") 4th Grade
                      option(value="5th" selected=data.grade_level == "5th") 5th Grade
                      option(value="6th" selected=data.grade_level == "6th") 6th Grade
                      option(value="7th" selected=data.grade_level == "7th") 7th Grade
                      option(value="8th" selected=data.grade_level == "8th") 8th Grade
                      option(value="9th" selected=data.grade_level == "9th") 9th Grade
                      option(value="10th" selected=data.grade_level == "10th") 10th Grade
                      option(value="11th" selected=data.grade_level == "11th") 11th Grade
                      option(value="12th" selected=data.grade_level == "12th") 12th Grade
                .row
                  .label
                    label(for="skill") Skill Level
                  .input
                    select(id="skill" name="skill")
                      option(value="elite" selected=data.skill_level == "elite") Elite
                      option(value="intermediate" selected=data.skill_level == "intermediate") Intermediate
                      option(value="beginner" selected=data.skill_level == "beginner") Beginner
                .row
                  .label
                    label(for="max") Max Number of Teams
                  .input
                    input(type="number" name="max" id="max" value=data.max)
                .row
                  .label
                  .input
                    input(type="submit" value="Update Division")
                    
